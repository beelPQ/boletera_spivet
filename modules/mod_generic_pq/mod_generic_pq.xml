<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Modulo Generico Spivet</name>
    <author>Piquero</author>
    <version>1.0.0</version>
    <description>Módulo generico para vistas completas</description>
    <files>
        <filename>mod_generic_pq.xml</filename>
        <filename module="mod_generic_pq">mod_generic_pq.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename> 
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                 <field 
                    name="titlePage"
                    type="text"
                    label="Título de sección"
                    description="El título se mostrará en grande del lado Izq. del contenido" />

                <field
                    name="descriptionInHome"
                    type="editor"
                    label="Introduccion del la seccion"
                    description="Ingresa el detalle de la sección"
                    filter="safehtml" />


                <field  
                    name="imageHeader"
                    label="Imagen header"
                    type="media" 
                    directory="quienessomos"/>
                
                <field
                    name="descriptionGeneral"
                    type="editor"
                    label="Descripcion general"
                    description="Ingresa el detalle de la sección"
                    filter="safehtml" />


                
                    
				

                
            </fieldset>
        </fields>
    </config>
</extension>
